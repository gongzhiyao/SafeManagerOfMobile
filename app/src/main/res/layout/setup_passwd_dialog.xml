<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260sp"
    android:layout_height="220sp"
    android:layout_gravity="center"
    android:background="@drawable/coner_bg_white"
    android:minHeight="150sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setup_passwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginBottom="10sp"
        android:padding="8sp"
        android:text="设置密码"
        android:textColor="#1ABDE6" />

    <EditText
        android:id="@+id/et_first_passwd"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="5sp"
        android:background="@drawable/edit_normal"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_second_passwd"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="5sp"
        android:background="@drawable/edit_normal"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10sp"
        android:background="#1ABDE6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="#1ABDE6"
            android:text="确认" />
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#1ABDE6"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="#1ABDE6"
            android:text="取消" />

    </LinearLayout>


</LinearLayout>